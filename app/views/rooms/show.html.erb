<div id="messages">
  <%= render "message", messages: @massages %>
</div>

<%= form_with model: @message, url:messages_path, method: :post, local:false, class:"w-100",html: { id: 'message_form' } do |f| %>
  <%= f.text_field :message, placeholder: "メッセージを入力して下さい" , size: 50, class:"form-text-field", id: "message_field" %>
  <%= f.hidden_field :room_id, value: @room.id %>
  <%= f.submit "投稿",class: 'form-submit'%>
<% end %>


